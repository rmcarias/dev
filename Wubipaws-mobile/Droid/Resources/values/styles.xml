<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="WubiPawsAppTheme" parent="WubiPawsAppTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="WubiPawsAppTheme.Base" parent="android:Theme.Holo.Light">
  		<item name="android:actionBarStyle">@style/MyActionBar</item>
  		<item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FAFAFA</item>
        <item name="android:titleTextStyle">@style/MyActionBarText</item>
    </style>
    <style name="MyActionBarText"
       parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
       	<item name="android:textColor">#263238</item>
	</style>
	   <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
           parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>
</resources>

